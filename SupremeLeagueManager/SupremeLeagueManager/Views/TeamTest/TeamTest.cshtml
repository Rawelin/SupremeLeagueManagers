@model SupremeLeagueManager.Models.TeamTest.TeamTestVM


<table class="table table-bordered table-striped table-sm" style="margin-top: 3em;">
    <tr>
        <th colspan="5" class="text-center">
            <div style="display: inline-block; float:left"><img src="~/Content/Resources/Emblems/real.png" width="50" height="50" /></div>
            <div style="display: inline-block;"><div style="font-size:25px">REAL MADRID</div></div>
            <div style="display: inline-block; float:right"><img src="~/Content/Resources/Emblems/real.png" width="50" height="50" /></div>
        </th>
    </tr>
    <tr class="text-center">
        <th style="width: 40%">Name</th>
        <th style="width: 20%">Position</th>
        <th style="width: 20%">Nationality</th>
        <th>Age</th>
        <th>Skills</th>


    </tr>
    @for (int i = 0; i < Model.Teams.ElementAt(0).Players.Count; i++)
    {
        <tr class="text-center">
            <td>@Model.Teams.ElementAt(0).Players.ElementAt(i).GetFullName()</td>
            <td>@Model.Teams.ElementAt(0).Players.ElementAt(i).Position</td>
            <td>@Model.Teams.ElementAt(0).Players.ElementAt(i).Nationality</td>
            <td>@Model.Teams.ElementAt(0).Players.ElementAt(i).Age</td>
            <td>@Model.Teams.ElementAt(0).Players.ElementAt(i).GetAverageSkils()</td>
        </tr>
    }
    <tr>
        <td colspan="4" class="text-right">Average Team Power </td>
        <td class="text-center text-danger">@Html.Raw(String.Format("{0:##}", @Model.Teams.ElementAt(0).GetTeamPower()))</td>
    </tr>

</table>
