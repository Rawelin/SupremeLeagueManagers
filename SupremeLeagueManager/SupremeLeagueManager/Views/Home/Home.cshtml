@model SupremeLeagueManager.Models.TeamTest.TeamManagementVM

<link href="~/Content/CSS/Home.css" rel="stylesheet" />

<div id="homeView" class="site-settings">

    <div id="home" class="mainPage">
        <h1 style="display: none"> Supreme League Managers </h1>
        <h4 style="display:none">
            Online simulator of the football league composed of the best international teams
        </h4>

        <nav>
            <div> <a href="@Url.Action("Admin", "Admin")">ADMINISTATOR&nbsp;&nbsp;</a></div>
            <div><a href="@Url.Action("TeamManagement", "TeamManagement")">MENAGEMENT&nbsp;&nbsp;&nbsp;</a></div>
            @if (Session["IdUser"] != null)
            {
                <div><a href="">ONLINE LEAGUE&nbsp;</a></div>
                @*<div><a href="@Url.Action("SinglePlayer", "SinglePlayer")">SINGLE PLAYER&nbsp;&nbsp;&nbsp;</a></div>*@
                <div><a v-on:click="SinglePlayer()">SINGLE PLAYER&nbsp;&nbsp;&nbsp;</a></div>
                <div><a href="@Url.Action("FriendlyMatch", "FriendlyMatch")">FRIENDLY GAME&nbsp;</a></div>
                <div><a href="">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;CREDITS&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></div>
            }
        </nav>
    </div>

    <div class="container" style="display:none">
        <div>
            <div class="d-flex justify-content-center" style="width: 33%; float: left">
                <div class="p-1" style="border: solid 2px; border-radius: 5px;">
                    <img src="~/Content/Resources/Gifs/liverpool.gif" width="240" height="320" />
                </div>
            </div>
            <div class="d-flex justify-content-center" style="width: 33%; float:left">
                <div class="p-1" style="border: solid 2px; border-radius: 5px;">
                    <img src="~/Content/Resources/Gifs/real.gif" width="240" height="320" />
                </div>
            </div>
            <div class="d-flex justify-content-center" style="width: 33%">
                <div class="p-1" style="border: solid 2px; border-radius: 5px;">
                    <img src="~/Content/Resources/Gifs/barcelona.gif" width="240" height="320" />
                </div>
            </div>
        </div>
    </div>
</div>

<div id="singlePlayer">
    @Html.Partial("_SinglePlayer")
</div>


<div id="music_list">
    <audio controls autoplay hidden></audio>
</div>


<div class="modal" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="myModal-label" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-fluid text-center">
            <div>
                <img src="~/Content/Resources/Gif/loading2.gif" width="200" height="200" />
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/GlobalFunctions/MusicPlayer.js"></script>
<script type="text/javascript">

            var vueHome = new Vue({
                el: '#homeView',
                data: {
                    Teams: [],
                },
                methods: {
                    EmblemName: function (name, city) {
                        var fulName = name + city;
                        fulName = fulName.replace(" ", "");
                        return fulName = '/Content/Resources/Emblems/' + fulName + '.png';
                    },

                    FullName: function (name, city) {
                        var fulName = name + ' ' + city;
                        return fulName;
                    },

                    Music: function () {
                        var path = "/Content/Resources/Music/";
                        var player = document.querySelector("#music_list audio");
                        songShuffle(player, path, 10);
                    },

                    ScrollOff: function () {
                        $("body").css("overflow", "hidden");
                        $("body").css("overflow-x", "hidden");
                        $("body").css("overflow-y", "hidden");
                    },

                    SinglePlayer: function () {
                        $.ajax(
                            {
                                url: "_SinglePlayer/Home",
                                type: "POST",
                                contentType: "application/json",
                                success: function () {

                                },
                                error: function () {
                                    alert('Nieoczekiwany błąd');
                                }
                            })
                            .done(function () {
                                $('#homeView').hide();
                                $("#singlePlayer").show();
                            });
                    },
                },
                created: function () {
                    this.Teams =  @Html.Raw(Json.Encode(Model.Teams));
                    $('#singlePlayer').hide();
                },
                mounted: function () {
                    this.Music();
                    this.ScrollOff();
                },
            })
</script>





