    <tbody id="squadBody" style="font-size:13px">
        <tr class="text-center" style="vertical-align:middle;" v-on:mouseover="ShowPlayerSkils(index)" v-for="(player, index) in Players" v-on:click="changePlayer(index)">
            <td>
                <label class="container">
                    <input type="checkbox" v-model="player.Selected" />
                    <span class="checkmark"></span>
                </label>
            </td>
            <td class="text-left">{{ player.Name}} {{player.Surname}} </td>
            <td><img v-bind:src="NationalityEmblem(index)" width="24" height="24" /></td>
            <td>{{ player.Position}}</td>
            <td>{{ player.Age}}</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="text-center" style="vertical-align:middle">
                <div class="progress progress-transparent">
                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" :style="{width: player.Stamina + '%'}">{{ player.Stamina }}</div>
                </div>
            </td>
        </tr>
