
<div id="calendarView">
    <h1 class="text-center">Calendar</h1>
    <div class="calendar">
        <div class="month">
            <ul>
                <li class="prev" v-on:click="Prev()" title="Previous month">&#10094;</li>
                <li class="next" v-on:click="Next()" title="Next month" >&#10095;</li>
                <li>
                    <b>{{Season.monthName}}</b>  <br>
                    <span style="font-size:18px;"><b>{{Season.year}}</b></span>
                </li>
            </ul>
        </div>
        <ul class="weekdays">
            <li>Mo</li>
            <li>Tu</li>
            <li>We</li>
            <li>Th</li>
            <li>Fr</li>
            <li>Sa</li>
            <li>Su</li>
        </ul>
        <ul class="days">
            <li v-for="(value, index) in Days"><span :id="'sp' + index">{{value}}</span></li>
        </ul>
        <div class="text-center">
            <div class="nextday" v-on:click="NextDay()" >Next Day</div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var vueCalendar = new Vue({
        el: '#calendarView',
        data: {
            Days: [],
            SinglePlayer: {},
            Season: { year: 0, month: 0, day: 0, monthName: '' },
            MonthDays: 0,
            CurrentDay: 0,
            Index: 0,
            Flag: false
        },
        methods: {

            Prev: function () {
                this.Days = [];
                this.Season.month--;

                if (this.Season.month == 0) {
                    this.Season.year--;
                    this.Season.month = 12;
                }

                this.SetCalendarMonth(this.Season.year, this.Season.month);
            },

            Next: function () {
                this.Days = [];
                this.Season.month++;

                if (this.Season.month > 12) {
                    this.Season.year++;
                    this.Season.month = 1;
                }

                this.SetCalendarMonth(this.Season.year, this.Season.month);
            },

            NextDay: function () {
                
                if (this.Season.month == this.SinglePlayer.Month) {

                    this.Season.day++;

                    if (this.CurrentDay == this.MonthDays) {
                       
                        //console.log('month')
                        this.Flag = true;
                       

                        if (this.Season.month == 12) {
                            this.SinglePlayer.Year++;
                            this.SinglePlayer.Month = 1;
                        } else {
                            this.SinglePlayer.Month++; 
                        }

                        var theDay = $('#sp' +this.Index.toString());
                        theDay.css('color', 'white');
                     
                        this.Next();
                        this.CurrentDay = 1;
                      
                    } else {
                        var theDay = $('#sp' + this.Index.toString());
                        theDay.css('color', 'white');

                        this.CurrentDay++;
                        this.Index++;

                        theDay = $('#sp' + this.Index.toString());
                        theDay.css('color', 'red');
                       
                    }
                }
               
                //console.log(this.Season.day);
                //console.log('d:', this.CurrentDay);
                console.log('index:', this.Index);
                //console.log('value:', this.Days[this.Index]);
                console.log('length:', this.Days.length);

                //console.log('md:', this.MonthDays);
                console.log('season:', this.Season.month);
                console.log('single:', this.SinglePlayer.Month);

            },

            SetCalendarMonth: function (year, month) {

                // number of the first day of month
                const date = new Date(year, month - 1, 1);
                var daysBefore = date.getDay() - 1;

                for (var i = 0; i < daysBefore; i++) {
                    this.Days.push(' ');
                }

                //var addDay = 0;
                //if (daysBefore > 0) {
                //    addDay = daysBefore;
                //} else {
                //    addDay = 0;
                //}

                //console.log('addDays: ', addDay);

                // number of days in month
                this.MonthDays = new Date(year, month, 0).getDate();
                console.log('monthDay:', this.MonthDays);
                console.log('year:', year);
                for (var i = 1; i <= this.MonthDays; i++) {
                    this.Days.push(i);
                }
                //for (var i = 0; i < this.MonthDays + addDay ; i++)
                //console.log(this.Days[i]);
                // name of the month
                const monthDate = new Date(year, month - 1, 1); 
                const monthName = monthDate.toLocaleString('eng', { month: 'long' });
                this.Season.monthName = monthName;

                if (this.Flag) {
                    //console.log('dbefore:', daysBefore)
                    if (daysBefore > 0) {
                        this.Index = daysBefore;
                    } else {
                        this.Index = 0;
                        //console.log('hey')
                    }
                   
                    this.Flag = false;
                }

                //console.log('season:', this.Season.month);
                //console.log('single:', this.SinglePlayer.Month);

                var theDay = $('#sp' + this.Index.toString());
                //console.log('dd:', this.CurrentDay);

                if (this.Season.month == this.SinglePlayer.Month) {
                    theDay.css('color', 'red');
                } else {
                    theDay.css('color', 'white');
                }

              
            },

            SeasonInit: function () {
                this.Season.year = this.SinglePlayer.Year;
                this.Season.month = this.SinglePlayer.Month;
                this.Season.day = this.SinglePlayer.Day;
                this.SetCalendarMonth(this.Season.year, this.Season.month);

            },

            FirstDay: function () {
                this.CurrentDay = new Date(this.Season.year, 0, this.Season.day).getUTCDate() + 1;
                this.Index = this.CurrentDay;
                var theDay = $('#sp' + this.CurrentDay.toString());
                theDay.css('color', 'red');
            }
        },
        created: function () {
            this.SinglePlayer = vueSinglePlayer.SinglePlayer;
            this.SeasonInit(); 
        },
        mounted: function () {
            this.FirstDay();
        },
    });

</script>



